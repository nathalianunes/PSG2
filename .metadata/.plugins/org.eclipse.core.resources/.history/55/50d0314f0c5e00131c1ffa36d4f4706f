		ellipse(jointPos_Proj_maleoloEsq.x, jointPos_Proj_maleoloEsq.y, size,
				size);
		
		//Apófises espinhosas
		PVector jointPos_apofise = new PVector();
		context.getJointPositionSkeleton(userId,
